<div class="flex flex-col">
  <%= render Avo::PanelComponent.new(name: 'Kalendarz', display_breadcrumbs: true) do |c| %>
    <% c.with_body do %>
      <div class="px-6 py-6">
        <!-- SELECT -->
        <div class="mb-4">
          <label for="calendar-type" class="block font-medium mb-1">Wybierz kalendarz:</label>
          <select id="calendar-type" class="border rounded px-2 py-1">
            <option value="all">Wszystkie</option>
            <option value="plans">Harmonogram produkcji</option>
            <option value="orders">Zam√≥wienia</option>
            <option value="contacts">Kontakty z klientami</option>
          </select>
        </div>

        <!-- KALENDARZ -->
        <div id="calendar" class="bg-white rounded shadow p-4"></div>
      </div>
    <% end %>
  <% end %>

  <%= javascript_include_tag "avo_calendar", defer: true, src: asset_path("avo_calendar.js") + "?v=#{Time.now.to_i}" %>
  <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/@fullcalendar/core@6.1.11/main.min.css", media: "all" %>
</div>
