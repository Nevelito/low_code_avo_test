<div class="flex flex-col">
  <%= render Avo::PanelComponent.new(name: 'Kalendarz produkcji i zamówień', display_breadcrumbs: true) do |c| %>
    <% c.with_body do %>
      <div class="px-6 py-6">
        <div id="calendar" class="bg-white rounded shadow p-4"></div>
      </div>
    <% end %>
  <% end %>

  <%= javascript_include_tag "avo_calendar", defer: true %>
  <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/@fullcalendar/core@6.1.11/main.min.css", media: "all" %>
</div>
